{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "./dist",
    "typeRoots": ["node_modules/@types"],
    "lib": ["ES2017"],
    "types": ["jest"]
  },
  "include": ["src/**/*", "__tests__/**/*.ts"],
  "exclude": ["node_modules"]
}
